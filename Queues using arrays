#include <stdio.h>
#include <stdlib.h>

#define MAX 5  // tamaño máximo de la cola

// estructura de la cola
typedef struct {
    int items[MAX];
    int front;
    int rear;
    int count;
} Queue;

// inicializar cola
void initQueue(Queue *q) {
    q->front = 0;
    q->rear = -1;
    q->count = 0;
}

// comprobar si está vacía
int isEmpty(Queue *q) {
    return q->count == 0;
}

// comprobar si está llena
int isFull(Queue *q) {
    return q->count == MAX;
}

// encolar
void enqueue(Queue *q, int value) {
    if (isFull(q)) {
        printf("La cola está llena, no se puede encolar %d\n", value);
        return;
    }
    q->rear = (q->rear + 1) % MAX;
    q->items[q->rear] = value;
    q->count++;
    printf("%d encolado exitosamente.\n", value);
}

// desencolar
int dequeue(Queue *q) {
    if (isEmpty(q)) {
        printf("La cola está vacía, no se puede desencolar.\n");
        return -1;
    }
    int value = q->items[q->front];
    q->front = (q->front + 1) % MAX;
    q->count--;
    printf("%d desencolado exitosamente.\n", value);
    return value;
}

// mostrar contenido de la cola
void displayQueue(Queue *q) {
    if (isEmpty(q)) {
        printf("Cola vacía.\n");
        return;
    }
    printf("Contenido de la cola: ");
    for (int i = 0; i < q->count; i++) {
        int index = (q->front + i) % MAX;
        printf("%d ", q->items[index]);
    }
    printf("\n");
}

int main() {
    Queue q;
    initQueue(&q);
    int choice, value;

    while (1) {
        printf("\n--- Menu ---\n");
        printf("1. Enqueue\n");
        printf("2. Dequeue\n");
        printf("3. Mostrar cola\n");
        printf("4. Salir\n");
        printf("Elige una opción: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Ingresa un entero: ");
                scanf("%d", &value);
                enqueue(&q, value);
                displayQueue(&q);
                break;
            case 2:
                dequeue(&q);
                displayQueue(&q);
                break;
            case 3:
                displayQueue(&q);
                break;
            case 4:
                printf("Saliendo...\n");
                exit(0);
            default:
                printf("Opción inválida.\n");
        }
    }

    return 0;
}

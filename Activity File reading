#include <stdio.h>
#include <stdlib.h>

// --- Funciones ---
float totalSale(float sales[], int n) {
    float total = 0.0;
    for (int i = 0; i < n; i++) {
        total += sales[i];
    }
    return total;
}

float maxSale(float sales[], int n) {
    float max = sales[0];
    for (int i = 1; i < n; i++) {
        if (sales[i] > max) {
            max = sales[i];
        }
    }
    return max;
}

int main() {
    FILE *file;
    char filename[] = "sales.txt";
    file = fopen(filename, "r");

    if (file == NULL) {
        printf("Error: no se pudo abrir el archivo %s\n", filename);
        return 1;
    }

    // --- Contar cuántas líneas tiene el archivo ---
    int count = 0;
    float temp;
    while (fscanf(file, "%f", &temp) == 1) {
        count++;
    }

    if (count == 0) {
        printf("El archivo está vacío.\n");
        fclose(file);
        return 1;
    }

    // --- Regresar al inicio del archivo ---
    rewind(file);

    // --- Reservar memoria dinámica ---
    float *sales = (float *) malloc(count * sizeof(float));
    if (sales == NULL) {
        printf("Error: no se pudo asignar memoria.\n");
        fclose(file);
        return 1;
    }

    // --- Leer los valores en el arreglo ---
    for (int i = 0; i < count; i++) {
        fscanf(file, "%f", &sales[i]);
    }

    // --- Llamar a las funciones ---
    float total = totalSale(sales, count);
    float max = maxSale(sales, count);

    // --- Imprimir resultados ---
    printf("Total de ventas: %.2f\n", total);
    printf("Venta máxima: %.2f\n", max);

    // --- Liberar memoria y cerrar archivo ---
    free(sales);
    fclose(file);

    return 0;
}
